{
  "name": "Tim Gro-tervation",
  "description": "Feeling unmotivated? Get yourself some Tim Gro-tivation",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "idle"

  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "timIcon.png",
    "default_title": "Gro-tivate!"
  },
    "content_scripts": [
        {
         "matches": [
              "http://*/*",
              "https://*/*"
          ],  
          "css": ["inject.css"],
          "js": ["reddit.js"]
        }
  ],
  "options_page": "options.html",
  "web_accessible_resources": ["timLarge.png", "reddit.js"],
  "manifest_version": 2
}
